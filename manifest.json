{
  "manifest_version": 3,
  "name": "Auto  & Fill GPT ",
  "version": "2.0",
  "description": "Auto  & Fill GPT",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs",
    "storage",
    "notifications",
    "alarms"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open File Uploader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["xlsx.full.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
